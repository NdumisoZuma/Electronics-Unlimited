    <div class="col-md-6">

        <b>Order Details</b>
        @{ Electronica.Models.Order order = (Electronica
                .Models.Order)ViewBag.Order; }

        <table class="table">
            <tr>
                <td>Order No.</td>
                <td>@order.Order_ID</td>
            </tr>
            <tr>
                <td>Status</td>
                <td>@order.status</td>
            </tr>

        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-4">

        <b>Shipping Details</b>
        @{ Electronica.Models.Order_Address address = (Electronica.Models.Order_Address)ViewBag.Address; }
        @if (address != null)
        {
    <table class="table">
        @*<tr>
            <td>Distance</td>
            <td>@address.distance</td>
        </tr>*@
        <tr>
            <td>Street</td>
            <td>@address.street</td>
        </tr>
        <tr>
            <td>City/Town</td>
            <td>@address.city</td>
        </tr>
        <tr>
            <td>Zipcode</td>
            <td>@address.zipcode</td>
        </tr>
    </table>
        }
        else
        {
            <hr />
            <p>
                Collect your order at our warehouse.
                <br />
                <i class="fa fa-map-marker"></i>  320 West St, Durban, 4001
                <br />
                <i class="fa fa-clock-o"></i>  09:00 am - 17:00 working hours
                <br />
            </p>
        }

    </div>
    <div class="col-md-6">

        <b>Items in this Order</b>
        <table class="table">
            <tr>
                <th>
                    Picture
                </th>
                <th>
                    Item
                </th>
                <th>
                    Qty
                </th>
                <th>
                    Price
                </th>
            </tr>

            @foreach (var item in (List<Electronica.Models.Order_Item>)ViewBag.Items)
            {
                <tr>
                    <td>
                        @if (item.Item.prod_Pic != null)
                        {
                            var base64 = Convert.ToBase64String(item.Item.prod_Pic);
                            var imgSrc = string.Format("data:image/gif;base64,{0}", base64);
                            <img src="@imgSrc" width="60" height="70" />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item.Prod_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.quantity)
                    </td>
                    <td>
                        R @Html.DisplayFor(modelItem => item.price)
                    </td>
                </tr>
            }

            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    R @ViewBag.Total
                </td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    <a href="@Url.Action("Secure_Payment", "Shopping", new { id = order.Order_ID})" class="btn btn-success"><i class="fa fa-lock"></i> Secure Payment</a>
                </td>
            </tr>
        </table>

    </div>
</div>
ewBag.Title = "Payment";
}

