@model IEnumerable<Electronica.Models.ShopVM>

@{
    ViewBag.Title = "ShopVM";
}

<h2>ShopVM</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">

    @foreach (var item in Model)
    {

        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.prod_Pic)
            </td>
        </tr>

        <tr>
            <td><b>Name:</b></td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
        </tr>
        <tr>
            <td><b>Category:</b></td>
            <td>
                @Html.DisplayFor(modelItem => item.category)
            </td>
        </tr>

        <tr>
            <td><b>Description</b></td>
            <td>
                @Html.DisplayFor(modelItem => item.Prod_Description)
            </td>
        </tr>




        <tr>
            <td><b>Quantity Available:</b></td>
            <td>
                @Html.DisplayFor(modelItem => item.Prod_Qty)
            </td>
        </tr>
        <tr>
            <td><b>Payment</b></td>
            <td>
                Prepaid @Html.RadioButton("Purchase", "Prepaid") On contract @Html.RadioButton("Purchase", "OnContract")
            </td>
        </tr>
        <tr>
            <td><b>On Prepaid:</b></td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
        </tr>

        <tr>
            <td><b>Monthly installment</b></td>
            <td>
                @Html.DisplayFor(modelItem => item.monthly_p)
            </td>
        </tr>
        <tr>
            <td><b>Over</b></td>
            <td>
                @Html.DisplayFor(modelItem => item.months) months
            </td>
        </tr>



        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
